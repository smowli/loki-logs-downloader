{
	"name": "loki-logs-downloader",
	"description": "Tool for downloading logs from Loki API",
	"version": "3.2.0",
	"license": "MIT",
	"keywords": [
		"loki"
	],
	"engines": {
		"node": ">=20"
	},
	"main": "./dist/sdk.js",
	"module": "./dist/sdk.mjs",
	"types": "./dist/sdk.d.ts",
	"bin": "./dist/cli.js",
	"homepage": "https://github.com/smowli/loki-logs-downloader/",
	"repository": {
		"type": "git",
		"url": "https://github.com/smowli/loki-logs-downloader/"
	},
	"bugs": {
		"url": "https://github.com/smowli/loki-logs-downloader/issues"
	},
	"release-it": {
		"$schema": "https://unpkg.com/release-it/schema/release-it.json",
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features ðŸš€"
						},
						{
							"type": "fix",
							"section": "Bug Fixes ðŸ¦—"
						}
					]
				},
				"infile": "CHANGELOG.md"
			}
		}
	},
	"publishConfig": {
		"access": "public",
		"ignore": [
			".github/",
			".husky/",
			"dev/",
			"docs/",
			"src/",
			".editorconfig",
			".nvmrc",
			".prettierignore",
			"CHANGELOG.md",
			"config.example.json",
			"docker-compose.yaml",
			"eslint.config.mjs",
			"prettier.config.cjs",
			"tsconfig.json",
			"vitest.config.ts"
		]
	},
	"scripts": {
		"build": "tsup --entry.cli ./src/cli.ts --entry.sdk ./src/sdk.ts --no-splitting --format cjs,esm --dts --clean --target=node20",
		"exec": "npm run build && node ./dist/cli.js -c ./config.json",
		"exec:dev": "tsx ./src/cli.ts -c ./config.json",
		"exec:dev-cli": "tsx ./src/cli.ts",
		"test": "vitest run --passWithNoTests --exclude=src/test/integration.spec.ts",
		"test:all": "vitest run",
		"test:dev": "vitest --passWithNoTests --exclude=src/test/integration.spec.ts",
		"test:integration": "vitest src/test/integration.spec.ts",
		"format:fix": "prettier --write --cache --ignore-unknown",
		"format:fix-all": "npm run format:fix .",
		"lint": "eslint",
		"lint:fix": "eslint --fix --cache",
		"lint:fix-all": "npm run lint:fix .",
		"prepack": "npmignore --auto",
		"prepare": "husky",
		"prepublishOnly": "npm run build",
		"release": "release-it",
		"generate-config-schema": "tsx ./dev/config-schema.ts"
	},
	"lint-staged": {
		"*": [
			"npm run lint:fix",
			"npm run format:fix"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.11.1",
		"@release-it/conventional-changelog": "^8.0.2",
		"@types/fs-extra": "^11.0.4",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.7.4",
		"@types/prompts": "^2.4.9",
		"eslint": "^9.11.1",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.9.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"npmignore": "^0.3.1",
		"prettier": "^3.3.3",
		"release-it": "^17.6.0",
		"tsup": "^8.3.0",
		"tsx": "^4.19.1",
		"typescript-eslint": "^8.7.0",
		"vitest": "^2.1.1",
		"zod-to-json-schema": "^3.23.3"
	},
	"dependencies": {
		"commander": "^12.1.0",
		"fs-extra": "^11.2.0",
		"glob": "^11.0.0",
		"md5": "^2.3.0",
		"prompts": "^2.4.2",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.4.0"
	}
}
